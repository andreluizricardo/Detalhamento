<%- include('../../partials/header'); %>
<%- include('../../partials/navbar'); %>
<div class="container">
    <div class="card mt-5">
        <div class="card-header">
            <h2>Lista de Administradores</h2>
        </div>
        <div class="card-body">
            <a href="/admin/users/new" class="btn btn-outline-success">Criar Novo Administrador</a> 
            <hr>
            <table class="table table-striped-columns">
                <thead>
                    <tr>
                        <th scope="col-md-4">ID</th>
                        <th scope="col-md-4">Nome</th>
                        <th scope="col-md-4">Login</th>
                        <th scope="col-md-4">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user) => { %>
                        <tr>
                            <th scope="row">
                                <%= user.id %>
                            </th>
                            <td>
                                <%= user.nome %>
                            </td>
                            <td>
                                <%= user.login %>
                            </td>
                            <td> 
                                <a class="btn btn-outline-warning" title="Editar" href="/admin/users/edit/<%= user.id %>"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                <% if(user.id == 1) {%>
                                <% } else { %>
                                    <form action="/useradm/delete" method="POST" style="display: inline;" onsubmit="confimDelete(event, this)">
                                        <input type="hidden" name="id" value="<%= user.id %>">
                                        <button class="btn btn-outline-danger" title="Excluir"> <i class="fa fa-minus-circle"></i></button>                                
                                    </form>
                                <% } %>
                            </td>
                        </tr>
                        <% })%>
                       
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('../../partials/footer'); %>