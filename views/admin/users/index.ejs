<%- include('../../partials/header'); %>
<%- include('../../partials/navbar'); %>
<div class="container">
    <div class="card mt-5">
        <div class="card-header">
            <h2>Lista de Usuário</h2>
        </div>
        <div class="card-body">
            <a href="/user/new" class="btn btn-outline-success">Criar Nova Usuário</a> 
            <hr>
            <table class="table table-striped-columns">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Sobrenome</th>
                        <th scope="col">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((user) => { %>
                        <tr>
                            <th scope="row">
                                <%= user.id %>
                            </th>
                            <td>
                                <%= user.nome %>
                            </td>
                            <td>
                                <%= user.sobrenome %>
                            </td>
                            <td> 
                                <a class="btn btn-outline-warning" title="Editar" href="/user/edit/<%= user.id %>"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                <form action="/user/delete" method="POST" style="display: inline;" onsubmit="confimDelete(event, this)">
                                    <input type="hidden" name="id" value="<%= user.id %>">
                                    <button class="btn btn-outline-danger" title="Excluir"> <i class="fa fa-minus-circle"></i></button>                                
                                </form>
                                <a class="btn btn-outline-secondary" title="Exibir Cartão" href="/user/<%= user.slug %>"><i class="fa fa-qrcode" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                        <% })%>
                       
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('../../partials/footer'); %>